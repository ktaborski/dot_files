#!/usr/bin/env python

import os
import sys
import subprocess
import giturlparse



repo = sys.argv[1]
cmd = ['git', 'clone', repo]
result = giturlparse.parse(repo)
dest = result.pathname.replace('.git', '')
if len(sys.argv) > 2:
    dest = os.path.join(sys.argv[2], dest)

cmd.append(dest)
print(f"Cloning {repo} to {dest}")
subprocess.check_call(cmd)